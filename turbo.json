{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "remoteCache": {
    "signature": true
  },
  "globalDependencies": [".env*", "docker-compose.test.yml"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**", "storybook-static/**"],
      "env": ["*"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true,
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*",
        ".prettierrc*",
        "prettier.config.*"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": true,
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**", "test-results/**"],
      "cache": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        "jest.config.*",
        "vitest.config.*",
        "test/**",
        "spec/**",
        "__tests__/**"
      ]
    },
    "test:cov": {
      "dependsOn": ["^test:cov"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        "playwright.config.*",
        "e2e/**",
        "tests/**/*.e2e.*",
        "docker-compose.test.yml"
      ]
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "outputs": ["test-results/**", "playwright-report/**", "e2e-results/**"],
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        "playwright.config.*",
        "e2e/**",
        "tests/**/*.e2e.*",
        "docker-compose.test.yml"
      ]
    },
    "test:e2e:cov": {
      "dependsOn": ["^test:e2e:cov"],
      "outputs": ["coverage/**"],
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        "playwright.config.*",
        "e2e/**",
        "tests/**/*.e2e.*",
        "docker-compose.test.yml"
      ]
    }
  }
}
