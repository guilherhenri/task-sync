{
  "name": "@task-sync/email-templates",
  "version": "1.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm env:load pnpm build:clean && pnpm build:tsc && pnpm build:esbuild && pnpm build:cleanup",
    "build:clean": "tsc --build --clean",
    "build:tsc": "tsc",
    "build:esbuild": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js --minify --external:react --external:react-dom --external:prettier",
    "build:cleanup": "find dist -mindepth 1 -not -path 'dist/index.js' -not -path 'dist/index.d.ts' -delete",
    "dev": "pnpm env:load email dev",
    "export": "pnpm env:load email export",
    "env:load": "dotenv -e ../../.env --",
    "test": "pnpm jest"
  },
  "dependencies": {
    "@react-email/components": "0.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@faker-js/faker": "^9.9.0",
    "@react-email/preview-server": "4.2.3",
    "@task-sync/api-types": "workspace:*",
    "@task-sync/env": "workspace:*",
    "@task-sync/eslint": "workspace:*",
    "@task-sync/tsconfig": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.8",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "react-email": "4.2.3",
    "ts-jest": "^29.4.0"
  }
}
